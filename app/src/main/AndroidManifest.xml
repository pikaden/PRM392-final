<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions for internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".Activity.MenuOption.ChangePassword"
            android:parentActivityName=".Activity.MenuOption.SettingsActivity" />
        <activity
            android:name=".Activity.Login.EmailLoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.MenuOption.about"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Activity.Screen.SingleChat.imageViewerActivity" />
        <activity
            android:name=".Activity.Screen.SingleChat.ChatActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Activity.MenuOption.ProfileActivity" />
        <activity
            android:name=".Activity.MenuOption.FindFriendsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Login.PhoneLoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Screen.GroupChatActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.MenuOption.SettingsActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Signup.SignupActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Activity.Login.LoginActivity" />
        <activity android:name=".Activity.Signup.EmailSignupActivity" />
        <activity android:name=".Activity.LinkAuthProviders.LinkEmailAndPasswordWithPhoneNumber" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>